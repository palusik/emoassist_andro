<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SetupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.50"
        android:background="@color/transparent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textUser"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@color/vkgrey"
                    android:gravity="center"
                    android:text="User Id"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/editTextUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ems="10"
                    android:hint="Enter User Identification"
                    android:inputType="textPersonName"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textActionsTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/title_background"
                android:gravity="center"
                android:text="@string/title_borderlines"
                android:textAlignment="center"
                android:textColor="@color/black" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView01"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/transparent" />


            <emoassist.views.EmotionBarView
                android:id="@+id/block01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_toEndOf="@id/textView01"
                android:background="@color/transparent"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewTitle01"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".34"
                        android:background="@color/vkgrey"
                        android:gravity="center"
                        android:text="@string/title_probabilities"
                        android:textAlignment="center"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/textViewTitle02"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".66"
                        android:background="@color/vkgrey"
                        android:gravity="center"
                        android:text="@string/title_heartrates"
                        android:textAlignment="center"
                        android:textColor="@color/black" />

                </LinearLayout>
            </emoassist.views.EmotionBarView>
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/vkgreen"
                android:gravity="center"
                android:text="@string/happy"
                android:textAlignment="center"
                android:textColor="@color/white" />


            <emoassist.views.EmotionBarView
                android:id="@+id/block11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_toEndOf="@id/textView11"
                android:background="@color/transparent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/textView11"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner11"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:layout_weight=".34" />

                    <EditText
                        android:id="@+id/editText21"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".33"
                        android:inputType="number"
                        android:contentDescription="Minimum bpm for triggering emotional alert"/>
                    <EditText
                        android:id="@+id/editText31"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".33"
                        android:inputType="number"
                        android:contentDescription="Maximum bpm for triggering emotional alert"/>

                </LinearLayout>

            </emoassist.views.EmotionBarView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/vkyellow"
                android:gravity="center"
                android:text="@string/neutral"
                android:textAlignment="center"
                android:textColor="@color/white" />


            <emoassist.views.EmotionBarView
                android:id="@+id/block12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_toEndOf="@id/textView12"
                android:background="@color/transparent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner12"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:layout_weight=".34" />

                    <EditText
                        android:id="@+id/editText22"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".33"
                        android:inputType="number"
                        android:contentDescription="Minimum bpm for triggering emotional alert"/>
                    <EditText
                        android:id="@+id/editText32"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".33"
                        android:inputType="number"
                        android:contentDescription="Maximum bpm for triggering emotional alert"/>

                </LinearLayout>
            </emoassist.views.EmotionBarView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/vkred"
                android:gravity="center"
                android:text="@string/angry"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <emoassist.views.EmotionBarView
                android:id="@+id/block13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_toEndOf="@id/textView13"
                android:background="@color/transparent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner13"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:layout_weight=".34" />

                    <EditText
                        android:id="@+id/editText23"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".33"
                        android:inputType="number"
                        android:contentDescription="Minimum bpm for triggering emotional alert"/>
                    <EditText
                        android:id="@+id/editText33"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".33"
                        android:inputType="number"
                        android:contentDescription="Maximum bpm for triggering emotional alert"/>

                </LinearLayout>
            </emoassist.views.EmotionBarView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/vkblue"
                android:gravity="center"
                android:text="@string/sad"
                android:textAlignment="center"
                android:textColor="@color/white" />


            <emoassist.views.EmotionBarView
                android:id="@+id/block14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_toEndOf="@id/textView14"
                android:background="@color/transparent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner14"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:layout_weight=".34" />

                    <EditText
                        android:id="@+id/editText24"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".33"
                        android:inputType="number"
                        android:contentDescription="Minimum bpm for triggering emotional alert"/>
                    <EditText
                        android:id="@+id/editText34"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".33"
                        android:inputType="number"
                        android:contentDescription="Maximum bpm for triggering emotional alert"/>

                </LinearLayout>
            </emoassist.views.EmotionBarView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/vkpurple"
                android:gravity="center"
                android:text="@string/fear"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <emoassist.views.EmotionBarView
                android:id="@+id/block15"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_toEndOf="@id/textView15"
                android:background="@color/transparent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner15"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:layout_weight=".34" />

                    <EditText
                        android:id="@+id/editText25"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".33"
                        android:inputType="number"
                        android:contentDescription="Minimum bpm for triggering emotional alert"/>

                    <EditText
                        android:id="@+id/editText35"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".33"
                        android:inputType="number"
                        android:contentDescription="Maximum bpm for triggering emotional alert"/>

                </LinearLayout>
            </emoassist.views.EmotionBarView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonSaveUserSetup"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="setupSave"
                    android:text="Save Settings" />

                <Button
                    android:id="@+id/buttonResetUserSetup"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="setupReset"
                    android:text="Reset to Defaults" />

            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textCurrentPulse"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:background="@color/vkgrey"
                    android:gravity="center"
                    android:text="@string/title_currentpulse"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/editTextCurrentPulse"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_weight=".25"
                    android:inputType="number"
                    android:textAppearance="@style/TextAppearance.AppCompat" />


                <Button
                    android:id="@+id/buttonBaselineSetup"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".50"
                    android:onClick="setupBaseline"
                    android:text="Reset to current HR" />
            </LinearLayout>

        </RelativeLayout>



    </LinearLayout>
</android.support.constraint.ConstraintLayout>
